<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<!-- Config for integration between JSF and Spring -->
	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>

	<!-- Config for UTF-8 resource bundle -->
	<application>
		<resource-bundle>
			<base-name>com.aviva.ResourceBundle</base-name>
			<var>bundle</var>
		</resource-bundle>
	</application>

	<!-- Custom config file -->
	<application>
		<resource-bundle>
			<base-name>ApplicationConfig</base-name>
			<var>config</var>
		</resource-bundle>
	</application>

	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>com.aviva.bean.Login</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>context</property-name>
			<value>#{context}</value>
		</managed-property>
	</managed-bean>

	<!-- END Config for JSF bean -->

	<!-- BEGIN Config for JSF navigation -->
	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/index.xhtml?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<from-outcome>HOME</from-outcome>
			<to-view-id>/index.jsf?faces-redirect=true</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<!-- END Config for JSF navigation -->

</faces-config>
